<h1>任務列表</h1>

<%= link_to '新增任務', new_ticket_path%>

<table>
  <thead>
    <tr>
      <td>任務名稱</td>
      <td>任務標籤</td>
      <td>任務狀態</td>
      <td>任務開始時間</td>
      <td>任務結束時間</td>
      <td>任務內容描述</td> 
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |f| %>
    <tr>
      <td><%= ticket.ticket_name %></td>
      <td><%= ticket.ticket_label %></td>
      <td><%= ticket.ticket_status %></td>
      <td><%= ticket.ticket_staring_time %></td>
      <td><%= ticket.ticket_ending_time %></td>
      <td><%= ticket.ticket_discription %></td>
      <td>
        <%= link_to '編輯任務', edit_ticket_path(ticket) %>
        <%= link_to '刪除任務', ticket_path(ticket), method: 'delete', data: { confirm: '確認刪除？' }%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

